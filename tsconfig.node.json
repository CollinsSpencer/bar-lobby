{
    "extends": "./tsconfig.shared.json",
    "include": ["electron.vite.config.*", "electron-builder.config.*", "src/main/**/*", "src/preload/**/*", "vendor/*"],
    "compilerOptions": {
        "strict": false,
        "composite": true,
        "types": ["electron-vite/node", "node"],
        "baseUrl": ".",
        "paths": {
            "@main/*": ["src/main/*"],
            "@preload/*": ["src/preload/*"],
            // "@renderer/*": ["src/renderer/*"], // TODO: Remove references to renderer
            "$/*": ["vendor/*"]
        },

        // TODO: Enable these for better typechecking
        "noImplicitReturns": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false
    }
}
